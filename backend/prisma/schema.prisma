generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id               Int          @id @default(autoincrement())
  login            String       @unique
  nickname         String?      @unique
  email            String       @unique
  password         String
  avatar           String?      @default("../assets/images/players/avatars/default.webp")
  isOnline         Boolean      @default(true)

  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  lastLogin        DateTime?    @default(now())


  winners          Int          @default(0)
  losses           Int          @default(0)
  sentRequests     Friendship[] @relation("Requester")
  receivedRequests Friendship[] @relation("Addressee")
}


model Friendship {
  id        Int      @id @default(autoincrement())
  userId    Int
  friendId  Int
  status    String
  createdAt DateTime @default(now())

  requester User @relation("Requester", fields: [userId], references: [id])
  addressee User @relation("Addressee", fields: [friendId], references: [id])

  @@unique([userId, friendId])
}
